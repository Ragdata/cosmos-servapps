{
    "cosmos-installer": {
        "form": [
            {
            "name": "adminOnly",
            "label": "Do you want to make this service admin only?",
            "initialValue": false,
            "type": "checkbox"
            }
        ]
    },
    "name": "homarr",
    "services": {
        "{ServiceName}": {
            "image": "ghcr.io/homarr-labs/homarr:latest",
            "container_name": "{ServiceName}",
            "restart": "unless-stopped",
            "healthcheck": {
                "test": [
                    "CMD-SHELL",
                    "wget --no-verbose --tries=3 --spider http://{ServiceName}:7575 || exit 1"
                ],
                "interval": 40,
                "timeout": 30,
                "start_period": 60,
                "retries": 3
            },
            "environment": [
                "SECRET_ENCRYPTION_KEY=AddOpenSSLKey"
            ],
            "networks": {
                "{ServiceName}": {}
            },
            "network_mode": "{ServiceName}",
            "ports": [
                "7575:7575/tcp"
            ],
            "volumes": [
                {
                "source": "{ServiceName}-appdata",
                "target": "/appdata",
                "type": "volume"
                },
                {
                "type": "bind",
                "source": "/etc/localtime:ro",
                "target": "/etc/localtime:ro"
                },
                {
                "type": "bind",
                "source": "/etc/timezone:ro",
                "target": "/etc/timezone:ro"
                },
                {
                "type": "bind",
                "source": "/var/run/docker.sock",
                "target": "/var/run/docker.sock"
                }
            ],
            "routes": [
                {
                "name": "{ServiceName}",
                "description": "Expose {ServiceName} to the web",
                "useHost": true,
                "target": "http://{ServiceName}:7575",
                "mode": "SERVAPP",
                "Timeout": 14400000,
                "ThrottlePerMinute": 12000,
                "BlockCommonBots": true,
                "SmartShield": { "Enabled": true },
                "AuthEnabled": true
                {if Context.adminOnly}
                , "AuthAdmin": true
                {/if}
                }
            ],
            "labels": {
                "cosmos-auto-update": "true",
                "cosmos-icon": "https://ragdata.github.io/cosmos-servapps/servapps/homarr/icon.png",
                "cosmos-force-network-mode": "{ServiceName}",
                "cosmos-force-network-secured": "true"
            }
        }
    },
    "networks": {
        "{ServiceName}": {}
    }
}
