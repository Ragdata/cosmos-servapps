{
    "cosmos-installer": {
        "form": [
            {
                "name": "JWT_PRIVATE_KEY",
                "label": "JWT Private Key? (random 32 char string)",
                "initialValue": "",
                "type": "text"
            }
        ]
    },
    "name": "docserver",
    "services": {
        "{ServiceName}": {
            "container_name": "{ServiceName}",
            "hostname": "{ServiceName}",
            "image": "onlyoffice/documentserver:latest",
            "restart": "unless-stopped",
            "environment": [
                "JWT_SECRET={Context.JWT_PRIVATE_KEY}"
            ],
            "networks": {
                "{ServiceName}": {}
            },
            "network_mode": "{ServiceName}",
            "ports": [
                "8088:80/tcp",
                "4438:443/tcp"
            ],
            "volumes": [
                {
                    "type": "volume",
                    "source": "{ServiceName}-data",
                    "target": "/var/www/onlyoffice/Data"
                },
                {
                    "type": "volume",
                    "source": "{ServiceName}-log",
                    "target": "/var/log/onlyoffice"
                },
                {
                    "type": "volume",
                    "source": "{ServiceName}-lib",
                    "target": "/var/lib/onlyoffice"
                },
                {
                    "type": "volume",
                    "source": "{ServiceName}-postgres",
                    "target": "/var/lib/postgresql"
                },
                {
                    "type": "volume",
                    "source": "{ServiceName}-rabbitmq",
                    "target": "/var/lib/rabbitmq"
                },
                {
                    "type": "volume",
                    "source": "{ServiceName}-redis",
                    "target": "/var/lib/redis"
                },
                {
                    "type": "volume",
                    "source": "{ServiceName}-fonts",
                    "target": "/usr/share/fonts/truetype/custom"
                },
                {
                    "type": "bind",
                    "source": "/etc/localtime:ro",
                    "target": "/etc/localtime:ro"
                },
                {
                    "type": "bind",
                    "source": "/etc/timezone:ro",
                    "target": "/etc/timezone:ro"
                }
            ],
            "routes": [
                {
                    "name": "{ServiceName}",
                    "description": "Expose {ServiceName} to the web",
                    "useHost": true,
                    "target": "http://{ServiceName}:80",
                    "mode": "SERVAPP",
                    "timeout": 14400000,
                    "throttlePerMinute": 12000,
                    "BlockCommonBots": true,
                    "Smartshield": { "Enabled": true }
                }
            ],
            "labels": {
                "cosmos-auto-update": "true",
                "cosmos-icon": "https://ragdata.github.io/cosmos-servapps/servapps/onlyoffice-docs/icon.png",
                "cosmos-force-network-mode": "{ServiceName}",
                "cosmos-force-network-secured": "true"
            }
        }
    },
    "volumes": {
        "{ServiceName}-data": {
            "name": "{ServiceName}-data",
            "driver": "local"
        },
        "{ServiceName}-fonts": {
            "name": "{ServiceName}-log",
            "driver": "local"
        },
        "{ServiceName}-log": {
            "name": "{ServiceName}-lib",
            "driver": "local"
        },
        "{ServiceName}-log": {
            "name": "{ServiceName}-postgres",
            "driver": "local"
        },
        "{ServiceName}-log": {
            "name": "{ServiceName}-rabbitmq",
            "driver": "local"
        },
        "{ServiceName}-log": {
            "name": "{ServiceName}-redis",
            "driver": "local"
        },
        "{ServiceName}-log": {
            "name": "{ServiceName}-fonts",
            "driver": "local"
        }
    },
    "networks": {
        "{ServiceName}": {
            "driver": "bridge",
            "ipam": {
                "config": [
                    { "subnet": "172.16.23.0/24" }
                ]
            }
        }
    }
}
