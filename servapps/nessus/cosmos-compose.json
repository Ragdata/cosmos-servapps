{
    "cosmos-installer": {
      "post-install": [
        {
          "type": "warning",
          "label": "The password admin: 2Qnm73J2x8m9DPWu store it carefully"
        }
      ]
    },
    "name": "nessus",
    "services": {
        "{ServiceName}": {
            "container_name": "{ServiceName}",
            "hostname": "{ServiceName}",
            "restart": "unless-stopped",
            "image": "tenable/nessus:latest-ubuntu",
            "networks": {
                "{ServiceName}": {}
            },
            "network_mode": "{ServiceName}",
            "volumes": [
                {
                  "type": "bind",
                  "source": "/etc/localtime:ro",
                  "target": "/etc/localtime:ro"
                },
                {
                  "type": "bind",
                  "source": "/etc/timezone:ro",
                  "target": "/etc/timezone:ro"
                }
            ],
            "routes": [
                {
                "name": "{ServiceName}",
                "description": "Expose {ServiceName} to the web",
                "useHost": true,
                "target": "https://{ServiceName}:8834",
                "mode": "SERVAPP",
                "Timeout": 14400000,
                "ThrottlePerMinute": 12000,
                "BlockCommonBots": true,
                "SmartShield": { "Enabled": true },
                "AcceptInsecureHTTPSTarget": true
                }
            ],
            "labels": {
                "cosmos-auto-update": "true",
                "cosmos-icon": "https://ragdata.github.io/cosmos-servapps/servapps/nessus/icon.png",
                "cosmos-force-network-mode": "{ServiceName}",
                "cosmos-force-network-secured": "true"
            }
        }
    }
}
