{
    "cosmos-installer": {},
    "name": "activepieces",
    "services": {
        "{ServiceName}": {
            "container_name": "{ServiceName}",
            "hostname": "{ServiceName}",
            "image": "activepieces/activepieces:latest",
            "restart": "unless-stopped",
            "healthcheck": {
                "test": [
                    "CMD",
                    "curl",
                    "-f",
                    "http://{ServiceName}:80"
                ],
                "interval": 40,
                "timeout": 30,
                "start_period": 60,
                "retries": 3
            },
            "environment": [
                "AP_QUEUE_MODE=MEMORY",
                "AP_DB_TYPE=SQLITE3",
                "AP_FRONTEND_URL=https://{Hostnames.{StaticServiceName}.{StaticServiceName}.host}"
            ],
            "networks": {
                "{ServiceName}": {}
            },
            "network_mode": "{ServiceName}",
            "volumes": [
                {
                "source": "{ServiceName}-data",
                "target": "/root/.activepieces",
                "type": "volume"
                },
                {
                "type": "bind",
                "source": "/etc/localtime:ro",
                "target": "/etc/localtime:ro"
                },
                {
                "type": "bind",
                "source": "/etc/timezone:ro",
                "target": "/etc/timezone:ro"
                }
            ],
            "routes": [
                {
                "name": "{ServiceName}",
                "description": "Expose {ServiceName} to the web",
                "useHost": true,
                "target": "http://{ServiceName}:80",
                "mode": "SERVAPP",
                "Timeout": 14400000,
                "ThrottlePerMinute": 12000,
                "BlockCommonBots": true,
                "SmartShield": { "Enabled": true }
                }
            ],
            "labels": {
                "cosmos-auto-update": "true",
                "cosmos-icon": "https://ragdata.github.io/cosmos-servapps/activepieces/icon.png",
                "cosmos-force-network-mode": "{ServiceName}",
                "cosmos-force-network-secured": "true"
            }
        }
    },
    "networks": {
        "{ServiceName}": {}
    }
}
