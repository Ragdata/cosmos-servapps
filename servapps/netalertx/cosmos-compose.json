{
    "cosmos-installer": {},
    "name": "netalertx",
    "services": {
        "{ServiceName}": {
            "container_name": "{ServiceName}",
            "hostname": "{ServiceName}",
            "image": "jokobsk/netalertx:latest",
            "restart": "unless-stopped",
            "environment": [
                "PORT=20211"
            ],
            "networks": {
                "{ServiceName}": {}
            },
            "network_mode": "{ServiceName}",
            "volumes": [
                {
                "type": "volume",
                "source": "{ServiceName}-config",
                "target": "/app/config"
                },
                {
                "type": "volume",
                "source": "{ServiceName}-db",
                "target": "/app/db"
                },
                {
                "source": "{ServiceName}-log",
                "target": "/app/front/log",
                "type": "volume"
                },
                {
                "type": "bind",
                "source": "/etc/localtime:ro",
                "target": "/etc/localtime:ro"
                },
                {
                "type": "bind",
                "source": "/etc/timezone:ro",
                "target": "/etc/timezone:ro"
                }
            ],
            "routes": [
                {
                "name": "{ServiceName}",
                "description": "Expose {ServiceName} to the web",
                "useHost": true,
                "target": "http://{ServiceName}:20211",
                "mode": "SERVAPP",
                "Timeout": 14400000,
                "ThrottlePerMinute": 12000,
                "BlockCommonBots": true,
                "SmartShield": { "Enabled": true }
                }
            ],
            "labels": {
                "cosmos-auto-update": "true",
                "cosmos-icon": "https://ragdata.github.io/cosmos-servapps/servapps/netalertx/icon.png",
                "cosmos-force-network-mode": "{ServiceName}",
                "cosmos-force-network-secured": "true"
            }
        }
    },
    "volumes": {
        "{ServiceName}-db": {}
    },
    "networks": {
        "{ServiceName}": {
            "driver": "bridge",
            "ipam": {
                "config": [
                    { "subnet": "172.16.16.0/24" }
                ]
            }
        }
    }
}
